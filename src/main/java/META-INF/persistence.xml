		<class>com.itsav.creditos.entity.TCredito</class>
		<class>com.itsav.creditos.entity.TCurso</class>
		<class>com.itsav.creditos.entity.TGrupo</class>
		<class>com.itsav.creditos.entity.TPeriodo</class>
		<class>com.itsav.creditos.entity.TUsuario</class>
		<properties>
		   	<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
		    <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/creditos"/>
		    <property name="javax.persistence.jdbc.user" value="creditos"/>
		    <property name="javax.persistence.jdbc.password" value="itsav"/>
		</properties>
	</persistence-unit>
</persistence>
